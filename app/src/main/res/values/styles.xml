<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edittextStyle">
        <item name="android:background">@drawable/rounded_whitebox</item>
        <item name="android:drawablePadding">@dimen/_7sdp</item>
        <item name="android:elevation">@dimen/_4sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textStyleWhite">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="textStyleWhiteWithIcon">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>